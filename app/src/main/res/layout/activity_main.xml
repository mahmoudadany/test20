<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Sign Up For, E-Learning."
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_25ssp"
        android:layout_marginStart="@dimen/_30sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textSize="@dimen/_20ssp"
        android:drawableStart="@drawable/ssss"
        android:drawablePadding="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:textColor="@color/title"/>
    <EditText
        android:id="@+id/full"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/edittext"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:inputType="textPersonName"
            android:textSize="@dimen/_20ssp"
            android:hint="enter your name"
        android:textColorHint="@color/hint"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail"
        android:drawableStart="@drawable/emailll"
        android:drawablePadding="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="@dimen/_20ssp"
        android:layout_marginStart="25dp"
        android:textColor="@color/title"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/edittext"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:hint="youremail@****.com"
        android:textColorHint="@color/hint"
        android:textColor="#FBFBFB"
        android:textSize="@dimen/_20ssp"
        android:paddingStart="@dimen/_10sdp"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="@dimen/_20ssp"
        android:drawableStart="@drawable/unlock"
        android:layout_marginStart="@dimen/_25sdp"
        android:textColor="@color/title"/>
        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:textColorHint="@color/hint"
            android:background="@drawable/edittext"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:passwordToggleEnabled="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:inputType="textPassword"
            android:textSize="@dimen/_20ssp"
            android:hint="************"
            android:paddingStart="@dimen/_10sdp"
            android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm Password"
        android:textSize="@dimen/_20ssp"
        android:layout_marginTop="@dimen/_6sdp"
        android:drawableStart="@drawable/unlock"
        android:layout_marginStart="@dimen/_25sdp"
        android:textColor="@color/title"/>

        <EditText
            android:id="@+id/pass2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:hint="Comfirm Password:"
            android:background="@drawable/edittext"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/hint"
            android:paddingStart="@dimen/_10sdp"
            android:textSize="@dimen/_20ssp"
            android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age                Gender"
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="@dimen/_20ssp"
        android:layout_marginStart="@dimen/_25sdp"
        android:textColor="#FFFFFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

        <EditText
            android:id="@+id/age"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:textColorHint="@color/hint"
            android:textColor="#FBFBFB"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:textSize="@dimen/_15ssp"
            android:layout_marginStart="@dimen/_20sdp"
            android:hint="Age"/>
        <RadioGroup
            android:id="@+id/radiog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:background="@drawable/edittext"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radiopm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/hint"
                android:layout_marginStart="@dimen/_3sdp"
                android:textSize="@dimen/_16ssp"/>
            <RadioButton
                android:id="@+id/radiof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/hint"
                android:textSize="@dimen/_16ssp"
                android:layout_marginStart="@dimen/_3sdp"/>
        </RadioGroup>
    </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button"
            android:paddingStart="@dimen/_60sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_60sdp"
            android:textStyle="bold"
            android:paddingBottom="@dimen/_10sdp"
            android:text="SIGN UP"
            android:textColor="#4461fb"
            android:textSize="@dimen/_25ssp" />
    </LinearLayout>
</ScrollView>